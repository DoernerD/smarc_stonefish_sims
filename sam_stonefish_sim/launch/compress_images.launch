<launch>

    <arg name="robot_name" default="sam"/>

    <!-- <node name="republish_down" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/perception/camera_down/image_color compressed out:=/$(arg robot_name)/perception/camera_down/image_color"/>
    <node name="republish_front_left" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/perception/camera_front_left/image_color compressed out:=/$(arg robot_name)/perception/camera_front_left/image_color"/>
    <node name="republish_front_right" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/perception/camera_front_right/image_color compressed out:=/$(arg robot_name)/perception/camera_front_right/image_color"/> -->
    
    <!-- Adjusted for docking with 3 forward facing cameras. -->
    <node name="republish_down" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/perception/camera_down/image_color compressed out:=/$(arg robot_name)/perception/camera_down/image_color"/>
    <node name="republish_front_left" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/payload/cam_port/image_color compressed out:=/$(arg robot_name)/payload/cam_port/image_raw"/>
    <node name="republish_front_right" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/payload/cam_starboard/image_color compressed out:=/$(arg robot_name)/payload/cam_starboard/image_raw"/>
    <node name="republish_front" type="republish" pkg="image_transport" output="screen" args="raw in:=/$(arg robot_name)/payload/cam_forward/image_color compressed out:=/$(arg robot_name)/payload/cam_forward/image_raw"/>

</launch>
