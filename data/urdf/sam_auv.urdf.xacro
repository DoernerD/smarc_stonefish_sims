<?xml version="1.0"?>
<robot name="sam_auv" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ECA 5E Micro mnipulator -->
  <!-- links -->
  <link name="$(arg robot_namespace)/base_link">
  </link>
  
  <link name="$(arg robot_namespace)/thruster_fixture">
  </link>
  
  <link name="$(arg robot_namespace)/thruster_yaw_fixture">
  </link>

  <link name="$(arg robot_namespace)/thruster_link">
  </link>

  <link name="$(arg robot_namespace)/battery_link">
  </link>

  <link name="$(arg robot_namespace)/tcg1_link">
  </link>

  <link name="$(arg robot_namespace)/tcg2_link">
  </link>

  <!--
  <link name="$(arg robot_namespace)/vbs_link">
  </link>
  -->

  <joint name="$(arg robot_namespace)/thruster_offset" type="fixed">
    <parent link="$(arg robot_namespace)/base_link"/>
    <child link="$(arg robot_namespace)/thruster_fixture"/>
    <origin rpy="0.0 0.0 0.0" xyz="-0.79 0 0"/>
  </joint>

  <joint name="$(arg robot_namespace)/joint1" type="revolute">
    <parent link="$(arg robot_namespace)/thruster_fixture"/>
    <child link="$(arg robot_namespace)/thruster_yaw_fixture"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.3" upper="0.3" velocity="0.2" effort="1.0"/>
  </joint>
  
  <joint name="$(arg robot_namespace)/joint2" type="revolute">
    <parent link="$(arg robot_namespace)/thruster_yaw_fixture"/>
    <child link="$(arg robot_namespace)/thruster_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.1065 0.0 0.0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.3" upper="0.3" velocity="0.2" effort="1.0"/>
  </joint>

  <joint name="$(arg robot_namespace)/lcg_joint" type="prismatic">
    <parent link="$(arg robot_namespace)/base_link"/>
    <child link="$(arg robot_namespace)/battery_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="-0.37 0.0 0.0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.01" upper="0.01" velocity="0.2" effort="1.0"/>
  </joint>

  <!--
  <joint name="$(arg robot_namespace)/vbs_joint_virt" type="prismatic">
    <parent link="$(arg robot_namespace)/base_link"/>
    <child link="$(arg robot_namespace)/vbs_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="2.0" velocity="0.2" effort="1.0"/>
  </joint>
  -->

  <joint name="$(arg robot_namespace)/tcg_joint1" type="revolute">
    <parent link="$(arg robot_namespace)/base_link"/>
    <child link="$(arg robot_namespace)/tcg1_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="-0.47 0.0 0.0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.6" upper="1.6" velocity="0.2" effort="1.0"/>
  </joint>

  <joint name="$(arg robot_namespace)/tcg_joint2" type="revolute">
    <parent link="$(arg robot_namespace)/base_link"/>
    <child link="$(arg robot_namespace)/tcg2_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="-0.49 0.0 0.0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.6" upper="1.6" velocity="0.2" effort="1.0"/>
  </joint>
  
</robot>
